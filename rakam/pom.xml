    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals><goal>copy-dependencies</goal></goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>ui</id>
            <dependencies>
                <dependency>
                    <groupId>org.rakam</groupId>
                    <artifactId>rakam-ui</artifactId>
                    <version>1.0</version>
                </dependency>
            </dependencies>
            <activation>
                <property>
                    <name>RAKAM_ENABLE_UI</name>
                    <value>true</value>
                </property>
            </activation>
        </profile>
    </profiles>
